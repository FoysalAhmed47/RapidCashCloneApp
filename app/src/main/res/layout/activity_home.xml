<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:id="@+id/title_page"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@drawable/header_background"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/RAPID_CASH"
            android:text="RAPIDCASH"
            android:textColor="#131212"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp" />
         </RelativeLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/home_cardView"
            android:layout_width="280dp"
            android:layout_height="215dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="20dp"
            app:cardElevation="4dp"
            android:layout_marginTop="127dp"
            app:cardCornerRadius="7dp">

            <RelativeLayout
                android:id="@+id/lnr_id"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:background="#E2B223">

                <TextView
                    android:id="@+id/details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/text"
                    android:textSize="11dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:layout_margin="2dp"
                    android:textColor="#ffff" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="80dp">

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="19sp"
                    android:textColor="#0F0F0F"
                    android:fontFamily="@font/zamyatin"
                    android:text="Tk 10000 highest amount"
                    />

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/txt1"
                    android:layout_marginTop="16sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="7dp"
                    android:src="@drawable/ic_watch" />

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:textSize="11sp"
                    android:layout_marginTop="16sp"
                    android:layout_below="@id/txt1"
                    android:textColor="#0F0F0F"
                    android:fontFamily="sans-serif-condensed-light"
                    android:layout_marginLeft="35dp"
                    android:text="Money will provided within 24 hours"
                    />

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/txt1"
                    android:layout_marginTop="16sp"
                    android:layout_toRightOf="@id/txt2"
                    android:src="@drawable/ic_calendar" />

                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:textSize="11sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@id/txt1"
                    android:textColor="#0F0F0F"
                    android:fontFamily="sans-serif-condensed-light"
                    android:layout_toRightOf="@id/img2"
                    android:text="Till 120 days" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/login_reg_btn"
        android:layout_width="166dp"
        android:layout_height="43dp"
        android:layout_marginTop="368dp"
        android:background="@drawable/buttons"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:fontFamily="sans-serif-condensed-light"
        android:layout_marginLeft="83dp"
        android:text="Apply Here"
        android:textStyle="normal"
        android:textColor="#ffff"
        />

   <RelativeLayout
       android:layout_width="270dp"
       android:layout_height="90dp"
       android:layout_marginTop="18dp"
       android:layout_centerInParent="true"
       android:background="@drawable/shape"
       android:layout_below="@id/login_reg_btn">

       <com.daimajia.slider.library.SliderLayout
           android:id="@+id/slider"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
       </com.daimajia.slider.library.SliderLayout>
   </RelativeLayout>



    <android.support.design.widget.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="?android:attr/windowBackground"
        app:menu="@menu/bottom_nav_menu"/>

</RelativeLayout>