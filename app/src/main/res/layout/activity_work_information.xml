<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkInformation">

    <RelativeLayout
        android:id="@+id/title_page_PInformation"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#ffff"
        android:elevation="2dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/title_image_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="7dp"
            android:src="@drawable/ic_back"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/RAPID_CASH"
            android:text="Work Information"
            android:textColor="#131212"
            android:textSize="15.5dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="center_horizontal"
            android:layout_marginTop="11dp" />

        <ImageView
            android:id="@+id/title_image_help"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_net"
            tools:ignore="RtlCompat" />
    </RelativeLayout>

    <com.baoyachi.stepview.HorizontalStepView
        android:id="@+id/step_view"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/title_page_PInformation"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/abcdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/step_view"
        android:text="Work information only to ensure the ability to refine"
        android:layout_marginLeft="39dp"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-condensed-light"
        />
    <EditText
        android:id="@+id/work_type"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/input_design"
        android:layout_below="@id/abcdf"
        android:hint="your work type mention here"
        android:inputType="textMultiLine"
        android:padding="13dp"
        android:textColor="#1B1919"
        android:textColorHint="#796C6C"
        android:textSize="13dp"
        android:fontFamily="sans-serif-condensed-light" />

    <Button
        android:id="@+id/PInformation_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/nextbtn"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:text="Submit"
        android:layout_below="@id/work_type"
        android:fontFamily="sans-serif-condensed-light"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/submit_latera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submitlater"
        android:textSize="14sp"
        android:layout_marginLeft="132dp"
        android:textColor="#0769B8"
        android:textStyle="bold"
        android:elevation="2dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/PInformation_submit_btn"
        android:fontFamily="sans-serif-condensed-light"
        />


</RelativeLayout>