<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WitnessActivity">

    <RelativeLayout
        android:id="@+id/title_page_PInformation"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#ffff"
        android:elevation="2dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/image_back_witness"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="7dp"
            android:src="@drawable/ic_back"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/RAPID_CASH"
            android:text="RAPIDCASH"
            android:textColor="#131212"
            android:textSize="15.5dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="center_horizontal"
            android:layout_marginTop="11dp" />

        <ImageView
            android:id="@+id/title_image_help_witness"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_net"
            tools:ignore="RtlCompat" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/security_icon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/title_page_PInformation"
        android:layout_marginTop="9.5dp"
        android:src="@drawable/ic_security"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/account_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="6dp"
        android:text="We promise to protect your confidential information"
        android:layout_toRightOf="@+id/security_icon"
        android:layout_below="@+id/title_page_PInformation"
        android:textSize="12dp"
        android:fontFamily="sans-serif-condensed-light"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/witness_cardView_imge"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="5dp"
        android:layout_below="@+id/account_text">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:src="@drawable/share"
            />

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/witness_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/witness_cardView_imge"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/pinfo_image"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="9.5dp"
            android:src="@drawable/pinfo"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/personal_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personal Information"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:fontFamily="sans-serif-condensed-light" />

        <ImageView
            android:id="@+id/pinfo_forword"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/account_forward_icon"
            android:layout_alignParentRight="true" />
        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="6dp"
            android:layout_below="@id/personal_information"
            android:background="#ADB1B1" />


        <ImageView
            android:id="@+id/winfo_image"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/personal_information"
            android:src="@drawable/winfo"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/work_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/personal_information"
            android:text="Work Information"
            android:textSize="12dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif-condensed-light"
            />
        <ImageView
            android:id="@+id/winfo_forword"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/pinfo_forword"
            android:layout_alignParentEnd="true"
            android:src="@drawable/account_forward_icon"
            tools:ignore="RtlCompat" />
        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_below="@id/work_information"
            android:layout_marginTop="5dp"
            android:background="#ADB1B1" />


        <ImageView
            android:id="@+id/emrg_contact_image"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/work_information"
            android:src="@drawable/emrgcontact"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/emergency_contract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/work_information"
            android:text="Emergency Contact"
            android:textSize="12dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:layout_marginTop="35dp"
            android:fontFamily="sans-serif-condensed-light"
            />
        <ImageView
            android:id="@+id/emrgcont_forword"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/winfo_forword"
            android:layout_alignParentEnd="true"
            android:src="@drawable/account_forward_icon"
            tools:ignore="RtlCompat" />
        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="4dp"
            android:layout_below="@id/emergency_contract"
            android:background="#ADB1B1" />

        <ImageView
            android:id="@+id/dinfo_image"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/emergency_contract"
            android:src="@drawable/binfo"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/description_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emergency_contract"
            android:text="Description Information"
            android:textSize="12dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:layout_marginTop="35dp"
            android:fontFamily="sans-serif-condensed-light"
            />
        <ImageView
            android:id="@+id/description_forword"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/emrgcont_forword"
            android:layout_alignParentEnd="true"
            android:src="@drawable/account_forward_icon"
            tools:ignore="RtlCompat" />
        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="4dp"
            android:layout_below="@id/description_information"
            android:background="#ADB1B1" />

        <ImageView
            android:id="@+id/picup_image"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/description_information"
            android:src="@drawable/gallery"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/photo_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description_information"
            android:text="NID Photo Upload"
            android:textSize="12dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:layout_marginTop="35dp"
            android:fontFamily="sans-serif-condensed-light"
            />
        <ImageView
            android:id="@+id/photoup_forword"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/description_forword"
            android:layout_alignParentEnd="true"
            android:src="@drawable/account_forward_icon"
            tools:ignore="RtlCompat" />
        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="4dp"
            android:layout_below="@id/photo_upload"
            android:background="#ADB1B1" />



        <Button
            android:id="@+id/EmInformation_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="65dp"
            android:background="@drawable/emrgloan_designbtn"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Emergency Loan"
            android:layout_below="@+id/photo_upload"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="#ff22" />

    </RelativeLayout>


</RelativeLayout>