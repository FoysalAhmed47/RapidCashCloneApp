<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DescriptionInformationActivity">

    <RelativeLayout
        android:id="@+id/title_page_PInformation"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#ffff"
        android:elevation="2dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/title_image_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="7dp"
            android:src="@drawable/ic_back"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/RAPID_CASH"
            android:text="Description Information"
            android:textColor="#131212"
            android:textSize="15.5dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="center_horizontal"
            android:layout_marginTop="11dp" />

        <ImageView
            android:id="@+id/title_image_help"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_net"
            tools:ignore="RtlCompat" />
    </RelativeLayout>


    <com.baoyachi.stepview.HorizontalStepView
        android:id="@+id/step_view"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/title_page_PInformation"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/abcdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/step_view"
        android:text="Fill in the information correctly to receive the money or the Receipt of money will fail"
        android:layout_marginLeft="15dp"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-condensed-light"
        />

    <RelativeLayout
        android:id="@+id/waysoftransaction"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/abcdf">

        <com.daimajia.slider.library.SliderLayout
            android:layout_marginTop="15dp"
            android:id="@+id/slider"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">
        </com.daimajia.slider.library.SliderLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/ways"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/waysoftransaction"
        android:layout_marginTop="7dp"
        android:text="Ways of transaction......."
        android:textSize="13dp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:fontFamily="sans-serif-condensed-light"
        />
    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ways"
        android:layout_below="@+id/waysoftransaction"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/DesInformation_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/nextbtn"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:text="Submit"
        android:layout_below="@id/spinner1"
        android:fontFamily="sans-serif-condensed-light"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/submit_latera"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="@string/submitlater"
        android:textSize="14sp"
        android:layout_marginLeft="132dp"
        android:textColor="#0769B8"
        android:textStyle="bold"
        android:elevation="2dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/DesInformation_submit_btn"
        android:fontFamily="sans-serif-condensed-light"
        />

</RelativeLayout>

