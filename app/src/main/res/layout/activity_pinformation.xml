<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PInformationActivity">

    <RelativeLayout
        android:id="@+id/title_page_PInformation"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#ffff"
        android:elevation="2dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/title_image_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="7dp"
            android:src="@drawable/ic_back"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/RAPID_CASH"
            android:text="Personal Information"
            android:textColor="#131212"
            android:textSize="15.5dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="center_horizontal"
            android:layout_marginTop="11dp" />

        <ImageView
            android:id="@+id/title_image_help"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_net"
            tools:ignore="RtlCompat" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll_view_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:scrollbars="none"
        android:layout_marginBottom="2dp"
        android:layout_below="@id/title_page_PInformation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/scroll_view_id">

            <com.baoyachi.stepview.HorizontalStepView
                android:id="@+id/step_view"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
              />

            <TextView
                android:id="@+id/abcdf"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/step_view"
                android:text="we wouldn't use this information to others action"
                android:layout_marginLeft="44.5dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-condensed-light"
                />

            <TextView
                android:id="@+id/abcdfg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/abcdf"
                android:text="@string/PInformationtxt"
                android:background="@drawable/txt_background"
                android:layout_margin="4dp"
                android:textSize="11.5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-condensed-light" />


            <EditText
                android:id="@+id/first_name"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/input_design"
                android:layout_below="@id/abcdfg"
                android:hint="first name"
                android:inputType="textMultiLine"
                android:padding="13dp"
                android:textColor="#1B1919"
                android:textColorHint="#796C6C"
                android:textSize="13dp"
                android:fontFamily="sans-serif-condensed-light" />

            <EditText
                android:id="@+id/middle_name"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/input_design"
                android:layout_below="@id/first_name"
                android:hint="middle name"
                android:inputType="textMultiLine"
                android:padding="13dp"
                android:textColor="#1B1919"
                android:textColorHint="#796C6C"
                android:textSize="13dp"
                android:fontFamily="sans-serif-condensed-light" />

            <EditText
                android:id="@+id/last_name"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/input_design"
                android:layout_below="@id/middle_name"
                android:hint="last name"
                android:inputType="textMultiLine"
                android:padding="13dp"
                android:textColor="#1B1919"
                android:textColorHint="#796C6C"
                android:textSize="13dp"
                android:fontFamily="sans-serif-condensed-light" />

            <EditText
                android:id="@+id/email"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/input_design"
                android:layout_below="@id/last_name"
                android:hint="email"
                android:inputType="textEmailAddress"
                android:padding="13dp"
                android:textColor="#1B1919"
                android:textColorHint="#796C6C"
                android:textSize="13dp"
                android:fontFamily="sans-serif-condensed-light" />


            <EditText
                android:id="@+id/birth_date"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/input_design"
                android:layout_below="@id/email"
                android:hint="birth date"
                android:inputType="datetime"
                android:padding="13dp"
                android:textColor="#1B1919"
                android:textColorHint="#796C6C"
                android:textSize="13dp"
                android:fontFamily="sans-serif-condensed-light" />

            <EditText
                android:id="@+id/gender"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/input_design"
                android:layout_below="@id/birth_date"
                android:hint="male/female"
                android:inputType="textMultiLine"
                android:padding="13dp"
                android:textColor="#1B1919"
                android:textColorHint="#796C6C"
                android:textSize="13dp"
                android:fontFamily="sans-serif-condensed-light" />

            <EditText
                android:id="@+id/marital_status"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/input_design"
                android:layout_below="@id/gender"
                android:hint="married/unmarried"
                android:inputType="textMultiLine"
                android:padding="13dp"
                android:textColor="#1B1919"
                android:textColorHint="#796C6C"
                android:textSize="13dp"
                android:fontFamily="sans-serif-condensed-light" />

            <EditText
                android:id="@+id/area"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/input_design"
                android:layout_below="@id/marital_status"
                android:hint="your area"
                android:inputType="textMultiLine"
                android:padding="13dp"
                android:textColor="#1B1919"
                android:textColorHint="#796C6C"
                android:textSize="13dp"
                android:fontFamily="sans-serif-condensed-light" />

            <EditText
                android:id="@+id/city"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/input_design"
                android:layout_below="@id/area"
                android:hint="your city"
                android:inputType="textMultiLine"
                android:padding="13dp"
                android:textColor="#1B1919"
                android:textColorHint="#796C6C"
                android:textSize="13dp"
                android:fontFamily="sans-serif-condensed-light" />


            <EditText
                android:id="@+id/police_station"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/input_design"
                android:layout_below="@id/city"
                android:hint="police station"
                android:inputType="textMultiLine"
                android:padding="13dp"
                android:textColor="#1B1919"
                android:textColorHint="#796C6C"
                android:textSize="13dp"
                android:fontFamily="sans-serif-condensed-light" />

            <EditText
                android:id="@+id/address_details"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/input_design"
                android:layout_below="@id/police_station"
                android:hint="full address"
                android:inputType="textMultiLine"
                android:padding="13dp"
                android:textColor="#1B1919"
                android:textColorHint="#796C6C"
                android:textSize="13dp"
                android:fontFamily="sans-serif-condensed-light" />

            <EditText
                android:id="@+id/religion"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/input_design"
                android:layout_below="@id/address_details"
                android:hint="your Religion"
                android:inputType="textMultiLine"
                android:padding="13dp"
                android:textColor="#1B1919"
                android:textColorHint="#796C6C"
                android:textSize="13dp"
                android:fontFamily="sans-serif-condensed-light" />


            <EditText
                android:id="@+id/NID"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/input_design"
                android:layout_below="@id/religion"
                android:hint="your NID number"
                android:inputType="textMultiLine"
                android:padding="13dp"
                android:textColor="#1B1919"
                android:textColorHint="#796C6C"
                android:textSize="13dp"
                android:fontFamily="sans-serif-condensed-light" />




            <Button
                android:id="@+id/PInformation_submit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/nextbtn"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:text="Submit"
                android:layout_below="@id/NID"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/submit_latera"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:text="@string/submitlater"
                android:textSize="14sp"
                android:layout_marginLeft="132dp"
                android:textColor="#0769B8"
                android:textStyle="bold"
                android:elevation="2dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/PInformation_submit_btn"
                android:fontFamily="sans-serif-condensed-light"
                />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>