<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_id"
    android:background="#ffff">



    <ImageView
        android:id="@+id/login_cencel_id"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_close"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        />

    <ImageView
        android:id="@+id/RC_id"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
      />

    <TextView
        android:id="@+id/title_rapidcash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RAPIDCASH"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:fontFamily="@font/zamyatin"
        />

    <EditText
        android:id="@+id/login_phone_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/input_design"
        android:padding="16dp"
        android:layout_below="@+id/title_rapidcash"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="e.g  0123456778"
        android:inputType="phone"
        android:textSize="13sp"
        android:fontFamily="sans-serif-condensed-light" />



    <EditText
    android:id="@+id/login_password_input"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/login_phone_input"
    android:background="@drawable/input_design"
    android:padding="16dp"
    android:layout_marginLeft="18dp"
    android:layout_marginRight="15dp"
    android:hint="Password"
    android:inputType="textPassword"
    android:textSize="13sp"
        android:layout_marginTop="15dp"
    android:fontFamily="sans-serif-condensed-light" />


    <Button
        android:id="@+id/login_btn_witness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/login_password_input"
        android:layout_marginTop="25dp"
        android:background="@drawable/nextbtn"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:text="Login"
        android:fontFamily="sans-serif-condensed-light"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/forget_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Password?"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/login_btn_witness"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="13dp"
        android:fontFamily="sans-serif-condensed-light"
        />

    <TextView
        android:id="@+id/login_to_reg"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="113dp"
        android:layout_marginTop="10dp"
        android:text="Don't have an account?Register"
        android:layout_below="@id/forget_pass"
        android:textSize="13dp"
        android:fontFamily="sans-serif-condensed-light"
        android:textColor="#137FD6"
        />

    <ImageView
        android:id="@+id/login_txt_go"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/login_to_reg"
        android:layout_below="@+id/forget_pass"
        android:src="@drawable/ic_forward" />

</RelativeLayout>